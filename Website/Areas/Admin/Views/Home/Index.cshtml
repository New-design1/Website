
@{
    string strTitle = "Панель администратора";
    ViewBag.Title = strTitle;
}

<div>
    <h2>@strTitle</h2>
    </div>
    <div class="div-box">
        <h3>Редактировать страницы сайта</h3>
        
            <a asp-area="Admin" asp-controller="PhoneEdit" asp-action="AddPhone">Добавить телефон</a><br />
            <a asp-area="Admin" asp-controller="PhoneEdit" asp-action="RemovePhone">Удалить телефон</a><br />
            <a asp-area="Admin" asp-controller="PhoneEdit" asp-action="UpdatePhone">Редактировать телефон</a>
